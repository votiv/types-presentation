{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js",
      "__tests__",
      "__mocks__"
    ]
  },
  "jsRules": {
    "object-literal-sort-keys": false,
    "quotemark": [
      true,
      "single"
    ],
    "ordered-imports": [
      false
    ]
  },
  "rules": {
    "class-name": true,
    "curly": true,
    "eofline": true,
    "object-literal-sort-keys": false,
    "quotemark": [
      true,
      "single"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "max-line-length": [
      true,
      130
    ],
    "member-ordering": [
      "static-before-instance",
      "variables-before-functions"
    ],
    "ordered-imports": [
      false
    ],
    "no-arg": true,
    "no-consecutive-blank-lines": true,
    "no-console": [
      false
    ],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-eval": true,
    "no-shadowed-variable": true,
    "trailing-comma": "never",
    "no-trailing-whitespace": true,
    "no-unused-expression": true,
    "no-unused-variable": true,
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "no-var-requires": false,
    "prefer-for-of": false,
    "one-line": [
      true,
      "check-catch",
      "check-finally",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "radix": true,
    "semicolon": true,
    "switch-default": true,
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "arrow-parameter",
      "property-declaration",
      "variable-declaration",
      "member-variable-declaration"
    ],
    "whitespace": [
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ]
  },
  "rulesDirectory": []
}
